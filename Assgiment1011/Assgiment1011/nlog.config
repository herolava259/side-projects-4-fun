<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
	  internalLogLevel="Trace"
	  internalLogFile="C:\Users\farrer.le\source\repos\Assgiment1011\Assgiment1011\Log\internal_logs\internallog.txt">

	<targets>
		<target name="console" xsi:type="Console" />
		<target name="logfile" xsi:type="File" 
				fileName="C:/Users/farrer.le/source/repos/Assgiment1011/Assgiment1011/Log/${shortdate}_logfile.txt"
				layout="${longdate} ${level:uppercase=true} ${message}"/>
	</targets>
	<rules>
		<!--<logger name="*" levels="Info,Error,Debug,Warn,Trace,Fail" writeTo="console" />-->
		<logger name="*" levels="Info,Error" writeTo="console" />
		<logger name="*" minlevel="Debug" writeTo="logfile" />
		<!-- <logger name="*" levels="Error" writeTo="email" /> -->
	</rules>
</nlog>